@model Login
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="card">
    <div class="card-body">       
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Login">
            <div class="row">
                <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                    <label asp-for="Email" class="form-label">EMAIL:</label>
                    <input type="text" class="form-control" asp-for="Email" />
                </div>              

            </div>
            <div class="row">              
                <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                    <label asp-for="Password" class="form-label">PASSWORD:</label>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="row">
                <div class="mb-3col-sm-12 col-md-12 col-lg-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                        <label class="form-check-label" asp-for="Recuerdame"></label>
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                    <button class="btn btn-primary">Login</button>
                    <a class="btn btn-success" asp-action="Registro">Crer una nueva cuenta</a>

                </div>

            </div>
        </form>
    </div>
</div>
