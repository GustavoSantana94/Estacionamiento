@model Registro
@{
    ViewData["Title"] = "Listado de autos";
}

<h1>Registrate</h1>

<div class="card">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Registro">
            <div class="row">
                <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                    <label asp-for="Email" class="form-label">EMAIL:</label>
                    <input type="text" class="form-control" asp-for="Email" />
                </div>
              
            </div>
            <div class="row">
               
                <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                    <label asp-for="Password" class="form-label">PASSWORD:</label>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>

            </div>
            <div class="row">
                <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                    <button class="btn btn-primary">Registrate</button>
                    <a class="btn btn-success" asp-action="Login">Deseo loguearme</a>
                </div>

            </div>
        </form>
    </div>
</div>
